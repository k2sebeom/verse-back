// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MUSICIAN
  AUDIENCE
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  pw           String
  nickname     String
  refreshToken String @default("")
  role         Role   @default(AUDIENCE)
  points       Int    @default(500)

  streamKey String?
  liveUrl   String?
  tracks    String[]
}
